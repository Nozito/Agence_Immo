<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:translationY="35dp">

    <!-- Title of the App -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spectral"
        android:gravity="center"
        android:padding="1dp"
        android:text="@string/app_name"
        android:textColor="#707070"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="30dp" />

    <!-- Title of Adding a Room -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/spectral"
        android:gravity="center"
        android:padding="5dp"
        android:text="Ajouter une Pièce"
        android:textColor="#707070"
        android:textSize="25dp"
        android:layout_marginBottom="30dp"
        android:textStyle="bold" />

    <!-- Spinner for Room Type -->
    <Spinner
        android:id="@+id/spinner_room_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/rounded_rectangle"
        android:textColor="#707070"
        android:fontFamily="@font/spectral"
        android:layout_marginTop="10dp"
        />

    <!-- Room Level Input -->
    <EditText
        android:id="@+id/edit_room_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Niveau de la Pièce"
        android:padding="10dp"
        android:fontFamily="@font/spectral"
        android:textColor="#707070"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_rectangle"
        />

    <!-- Room Length Input -->
    <EditText
        android:id="@+id/edit_room_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Longueur de la Pièce (m)"
        android:padding="10dp"
        android:fontFamily="@font/spectral"
        android:textColor="#707070"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_rectangle"
        />

    <!-- Room Width Input -->
    <EditText
        android:id="@+id/edit_room_width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Largeur de la Pièce (m)"
        android:padding="10dp"
        android:fontFamily="@font/spectral"
        android:textColor="#707070"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_rectangle"
        />

    <!-- Save Button -->
    <Button
        android:id="@+id/btn_save_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enregistrer la Pièce"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_rectangle"
        android:padding="1dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#707070"
        android:fontFamily="@font/spectral"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <!-- Quit Button -->
    <Button
        android:id="@+id/btn_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Annuler"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_rectangle_black"
        android:padding="1dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFF"
        android:fontFamily="@font/spectral"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
</LinearLayout>
